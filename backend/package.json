{
  "name": "caixa-premiada-backend",
  "version": "1.0.0",
  "description": "Backend da plataforma Caixa Premiada",
  "main": "src/server.js",
  "scripts": {
    "start": "npx prisma generate && node src/server.js",
    "dev": "nodemon src/server.js",
    "seed": "node prisma/seed.js",
    "build": "npx prisma generate",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "fix:deposit": "node src/scripts/autoFixDeposit.js",
    "fix:webhook": "npx prisma db push && node src/scripts/autoFixDeposit.js",
    "check:affiliate": "node src/scripts/checkAffiliateSystem.js",
    "fix:affiliate": "node src/scripts/fixAffiliateLink.js",
    "check:balance": "node src/scripts/checkUserBalance.js",
    "force:fix": "node src/scripts/forceFixAll.js",
    "fix:all": "npx prisma db push && node src/scripts/autoFixDeposit.js && node src/scripts/checkAffiliateSystem.js && node src/scripts/fixAffiliateLink.js && node src/scripts/checkUserBalance.js"
  },
  "keywords": [
    "caixa-premiada",
    "backend",
    "nodejs",
    "express",
    "prisma",
    "postgresql"
  ],
  "author": "Caixa Premiada Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cpf-check": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "qrcode": "^1.5.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

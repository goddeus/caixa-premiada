# Configurações do Servidor para Deploy
PORT=65002
NODE_ENV=production

# Database - Use PostgreSQL para produção
DATABASE_URL=postgres://usuario:senha@host:5432/database

# JWT Secret - Use uma chave forte em produção
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_2024

# Frontend URL - URL do frontend hospedado
